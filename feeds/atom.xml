---
layout: nil
---
<?xml version="1.0"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>{{ site.name | xml_escape }}</title>
  <link href="{{ site.url }}"/>
  <link type="application/atom+xml" rel="self" href="{{ site.url }}{{ page.url }}"/>
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>{{ site.url }}/</id>
  {% capture allauthors %}
  {% for kv in site.authors %}{% assign author=kv[1] %}
    {% include atom.author.xml %}
  {% endfor %}{% endcapture %}
  {{ allauthors }}
  {% for post in site.posts limit: 20 %}
  <entry>
    <id>{{ site.url }}{{ post.id }}</id>
    <link type="text/html" rel="alternate" href="{{ site.url }}{{ post.url }}"/>
    <title>{{ post.title }}</title>
    <published>{{ post.date | date_to_xmlschema }}</published>
    <updated>{{ post.date | date_to_xmlschema }}</updated>
    {% if post.authors %}
    {% for key in post.authors %}{% assign author=site.authors[key] %}
    {% unless author %}{% assign author=key %}{% endunless %}
      {% include atom.author.xml %}
    {% endfor %}
    {% else %}
    {{ allauthors }}
    {% endif %}
    <content type="html">{{ post.content | xml_escape }}</content>
  </entry>
  {% endfor %}
 
</feed>
